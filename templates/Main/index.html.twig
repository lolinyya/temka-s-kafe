{% extends 'base.html.twig' %}
{% block body %}
<h1 style="margin-top:0;">Панель управления</h1>

<div style="border:1px solid #ddd; padding:15px; margin-bottom:20px;">
    <strong>Заказов:</strong> {{ total_orders }} 
    <a href="{{ path('app_orders_index') }}" style="margin-left:10px;">все</a>
</div>

<div style="border:1px solid #ddd; padding:15px; margin-bottom:20px;">
    <strong>Клиентов:</strong> {{ total_people }} 
    <a href="{{ path('app_people_index') }}" style="margin-left:10px;">все</a>
</div>

<div style="border:1px solid #ddd; padding:15px; margin-bottom:30px;">
    <strong>Блюд в меню:</strong> {{ total_dishes }} 
    <a href="{{ path('app_dishes_index') }}" style="margin-left:10px;">меню</a>
</div>

<h3>Последние заказы</h3>
<ul style="list-style:none; padding:0; margin:0;">
    {% for orders in recent_orders %}
        <li style="padding:8px; border-bottom:1px solid #eee;">
            #{{ orders.id }} — {{ orders.people.name }} — {{ orders.totalPrice }} руб.
            <a href="{{ path('app_orders_index', {id: orders.id}) }}"></a>
        </li>
    {% else %}
        <li style="padding:8px; color:#999;">Нет заказов</li>
    {% endfor %}
</ul>
{% endblock %}