{% extends 'base.html.twig' %}
{% block body %}
<h1 style="margin-top:0;">Заказ #{{ order.id }}</h1>

<p><strong>Клиент:</strong> {{ order.people.name }} ({{ order.people.phoneNumber }})</p>

<h3>Блюда:</h3>
<ul style="padding-left:20px;">
    {% for dishes in order.dishes %}
        <li>{{ dishes.dname }} — {{ dishes.price }} руб.</li>
    {% endfor %}
</ul>

<p style="font-weight:bold; font-size:1.1em;">Итого: {{ order.totalPrice }} руб.</p>

<div style="margin-top:20px;">
    <a href="{{ path('app_orders_edit', {id: order.id}) }}" style="color:#b132d5; margin-right:15px;">Редактировать</a>
    <a href="{{ path('app_orders_index') }}" style="color:#6c757d;">Назад к заказам</a>
</div>
{% endblock %}